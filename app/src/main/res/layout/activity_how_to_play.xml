<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgound"
    android:layout_height="match_parent"
    tools:context="com.example.minesweeper.how_to_play">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/num"
            android:padding="12dp"
            android:layout_width="130dp"
            android:layout_height="148dp"
            android:src="@drawable/how_num" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="number"
                android:textColor="#00070a"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="คือ จะคอยบอกให้รู้ว่า ระเบิดรอบๆช่องตัวเลข จะมีค่าเท่ากับตัวเลขนั้น"
                android:textColor="#00070a"
                android:textSize="17sp" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/space"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:padding="12dp"
            android:src="@drawable/how_blank" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="space"
                android:textColor="#00070a"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="คือ พื้นที่ตรงนั้นไม่มีระเบิด"
                android:textColor="#00070a"
                android:textSize="17sp" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/flag"
            android:padding="12dp"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:src="@drawable/how_flag" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="flag"
                android:textColor="#00070a"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="คือ ปักไว้เพื่อให้รู้ว่าตำแหน่งนั้นคือระเบิด โหมดง่ายปักครบ 5 จะชนะ แต่หากเป็นโหมดยากปักครบ 10 จึงชนะ"
                android:textColor="#00070a"
                android:textSize="17sp" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
